const items = [
[
		{
			title: '1. Detektiv: Justus Jonas',
			description:
				'Wohnt bei Onkel Titus und Tante Mathilda auf Schrottplatz',
			icon: 'ic:round-checklist',
		},
		{
			title: '2. Detektiv: Peter Shaw',
			description:
				'Der Sportlichste von den Dreien',
			icon: 'octicon:git-branch',
		},
		{
			title: 'Recherche und Archiv: Bob Andrews',
			description:
				'Sitzt den ganzen Tag in der BÃ¼cherei von Rocky Beach',
			icon: 'ic:round-rocket-launch',
		},
	],
	[
		{
			title: 'Alex Zieschang',
			description:
				'6. Semester Bachelor, Vertiefung Informatik',
			icon: 'ic:round-bolt',
		},
		{
			title: 'Carsten Wesp',
