---
import Layout from '~/layouts/PageLayout.astro';

const { meta } = Astro.props;
---

<Layout {meta}>
	<section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
		<header>
			<h1
				class="text-center text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-8 md:mb-16 font-heading underline underline-offset-[0.35em] decoration-steel-100 dark:decoration-steel-700 decoration-1"
			>
				<slot name="title" />
			</h1>
		</header>
		<slot />
	</section>
</Layout>
